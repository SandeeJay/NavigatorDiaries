<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NavigatorDiaries.Views.WeatherPage">

    <StackLayout>


        <Button x:Name="getWeatherBtn"
          Text="Get Weather"
          Clicked="GetWeatherBtn_Clicked" />

        <ScrollView VerticalOptions="FillAndExpand">
            <StackLayout Padding="10,10,10,10" HorizontalOptions="Start">
                <Label Text="Location" />
                <Label Text="{Binding Title}"  />

                <Label Text="Temperature" />
                <Label Text="{Binding Temperature}" />

                <Label Text="Wind Speed"  />
                <Label Text="{Binding Wind}" />

             <!--   <Label Text="Rain"  />
                <Label Text= "{Binding Rain}" />-->

                <Label Text="Humidity" />
                <Label Text="{Binding Humidity}"  />

                <Label Text="Visibility"  />
                <Label Text="{Binding Visibility}"  />

                <Label Text="Time of Sunrise"  />
                <Label Text="{Binding Sunrise}"  />

                <Label Text="Time of Sunset"  />
                <Label Text="{Binding Sunset}"  />
            </StackLayout>
        </ScrollView>

    </StackLayout>

</ContentPage>

        
       